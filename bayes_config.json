{
  "meta": {
    "name": "baroque_bayes_Ltot",
    "notes": "BO con EI. Variables: L_total y r1_longitud (r3_longitud = L_total - r1_longitud). Rangos en SI (m)."
  },
  "model": {
    "temperature_C": 20.0,
    "scan_steps": 50,
    "L_min_frac": 0.70
  },
  "space": {
    "L_total":           [0.50, 0.50],
    "r1_longitud":       [0.20, 0.25],
    "r1_radio":          [0.0017, 0.0019],
    "radio_cono_final":  [0.0010, 0.0015],
    "agujero_posicion":  [0.015, 0.035],
    "agujero_radio_in":  [0.0080, 0.0150],
    "agujero_radio_out": [0.0070, 0.0100],
    "agujero_largo":     [0.0070, 0.0120]
  },
  "objective": {
    "weights": { "w_mag": 1.0, "w_var": 0.5, "w_max": 0.5, "w_miss": 50.0 }
  },
  "runtime": {
    "output_dir": "bayes_results",
    "save_best_curve": true,
    "resume_from": "",
    "use_tqdm": true,
    "random_starts": 20,
    "n_calls": 300,
    "checkpoint_every": 5,
    "seed": 42
  }
}